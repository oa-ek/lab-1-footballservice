@{
}
<h2>Створення гравця</h2>

<form asp-controller="Player" asp-action="Create" method="post" class=" d-flex flex-column gap-4">
    <div class="form-group">
        <label asp-for="Name">Ім'я:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Nationality">Національність:</label>
        <input asp-for="Nationality" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth">Дата народження:</label>
        <input asp-for="DateOfBirth" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Position">Позиція:</label>
        <select asp-for="Position" asp-items="ViewBag.Positions" class="form-control">
            <option value="">Виберіть позицію</option> <!-- Пустий варіант -->
        </select>
    </div>
     <div class="form-group">
        <label asp-for="TeamId">Команда:</label>
        <select asp-for="TeamId" class="form-control">
            <option value="">Виберіть команду</option> <!-- Пустий варіант -->
                @foreach (var team in ViewBag.Teams)
                {
                    <option value="@team.Value">@team.Text</option>
                }
        </select>
    </div>

    <div class="w-25 d-flex flex-row gap-4">

        <button type="submit" class="btn btn-primary">Створити</button>
        <a class="btn btn-danger" asp-controller="Player" asp-action="Index">Скасувати</a>
    </div>
</form>