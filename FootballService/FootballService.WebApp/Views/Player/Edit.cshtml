@{
}
<h2>Редагування гравця</h2>

<form class="d-flex flex-column gap-4" asp-controller="Player" asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Name">Ім'я:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Nationality">Національність:</label>
        <input asp-for="Nationality" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth">Дата народження:</label>
        <input asp-for="DateOfBirth" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Position">Позиція:</label>
        <input asp-for="Position" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TeamId">Команда:</label>
        <select asp-for="TeamId" asp-items="ViewBag.Teams" class="form-control"></select>
    </div>
    <div class="w-25 d-flex flex-row gap-4">

        <button type="submit" class="btn btn-primary">Зберегти зміни</button>
        <a class="btn btn-danger" asp-controller="Player" asp-action="Index">Скасувати</a>
    </div>
</form>